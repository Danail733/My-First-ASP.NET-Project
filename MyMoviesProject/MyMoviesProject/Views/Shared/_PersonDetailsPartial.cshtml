<div class="container">
    <div class="row">
        <h1 class="mb-3">@Model.Name</h1>
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h3>Biography: </h3>
            <p>@Model.Biography</p>

            <h3>Movies: </h3>
            <div class="row mb-3">
            @foreach (var movie in Model.Movies)
            {
                <div class="card mycard" style="width: 8rem;">
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="text-dark">
                        @movie.Name (@movie.Year)
                    </a>
                    <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Name">
                </div>
            }
            </div>
        </div>

      
    </div>
</div>