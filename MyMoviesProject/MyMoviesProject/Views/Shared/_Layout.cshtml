<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movies for everyone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Movies for everyone</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="btn-group">
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="Index">
                        Classic Movies
                    </a>
                    <button type="button" class="btn btn-lg btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        @if (User.IsInRole(WebConstants.administratorRoleName))
                        {
            <li class="nav-item dropdown-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Directors" asp-action="Add">Add Director</a>
            </li>
                            <li class=" dropdown-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Actors" asp-action="Add">Add Actor</a>
                            </li>
                                            <li class="dropdown-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Add">Add Movie</a>
                                            </li>}
                        <li class="dropdown-item">
                            <a class="nav-link text-dark" asp-controller="Movies" asp-action="All">All Movies</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-controller="Actors" asp-action="All">All Actors</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-controller="Directors" asp-action="All">All Directors</a>
                        </li>
                        @if (!User.IsInRole(WebConstants.administratorRoleName))
                        {
            <li class="nav-item dropdown-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Watchlist" asp-action="Movies">Watchlist</a>
            </li>}
                    </ul>
                </div>
                @*<div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Movies for everyone
            </a>


            </ul>

        </div>*@
                <partial name="_LoginPartial" />
                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">*@
                @*<ul class="navbar-nav flex-grow-1">*@

                @*</div>*@
            </div>
        </nav>
    </header>
    <div class="container">

        @if (TempData.ContainsKey(WebConstants.SuccessFullGlobalMessageKey))
        {
    <div class="alert alert-success" role="alert">
        @TempData[WebConstants.SuccessFullGlobalMessageKey]
    </div>}
        @if (TempData.ContainsKey(WebConstants.FailedGlobalMessageKey))
        {
    <div class="alert alert-danger" role="alert">
        @TempData[WebConstants.FailedGlobalMessageKey]
    </div>}

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyMoviesProject - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/i18n/defaults-*.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>


    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
