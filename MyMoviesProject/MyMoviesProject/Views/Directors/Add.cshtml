@model DirectorFormModel

@{
    ViewData["Title"] = "Add Director";
}

<h2 class="text-center mt-4 mb-4">Add a new Director</h2>
<div class="container">
    <div class="row ">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter director's name">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Biography"></label>
                    <textarea asp-for="Biography" class="form-control" rows="4" placeholder="He was born in 1959..."></textarea>
                    <span asp-validation-for="Biography" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here..">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary mt-3" type="submit" value="Add" />
            </form>
        </div>
    </div>
</div>